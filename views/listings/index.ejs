<% layout("/layouts/boilerplate") %>

<body>
    <h2>All Listings</h2>

    <!-- Adjusted column classes for different screen sizes -->
    <div class="row row-cols-lg-3 row-cols-md-2">
        <% for(let listing of allListings) { %>
            <!-- Adjusted column width for smaller screens -->
            <a href="/listings/<%= listing._id %>" class="listing-link col-sm-6 col-md-6 col-lg-4 mb-3" style="display: block;">
                <div class="card">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                           <b><%= listing.title %></b><br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
